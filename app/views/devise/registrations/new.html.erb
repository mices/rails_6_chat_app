
<h2><%= (t 'sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label (t 'email_') %><br>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label (t 'username_') %><br>
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label (t 'first_name') %><br>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label (t 'last_name') %><br>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label (t 'middle_name') %><br>
    <%= f.text_field :middle_name %>
  </div>

  <div class="field">
    <%= f.label (t 'gender_') %><br>
    <%= f.select :gender, User::GENDER_TYPES, prompt: (t 'select_your_sex') %>
  </div>

  <div class="field">
    <%= f.label (t 'date_of_birth') %><br>
    <%= f.date_select :birth_date, prompt: { day: (t 'select_day'), month: (t 'select_month'), year: (t 'select_year') }, start_year: Date.today.year - 17, end_year: Date.today.year - 100 %>
  </div>

  <div class="field" id="birth_place_country">
    <%= f.label (t 'birth_place_country') %><br>
    <%= f.country_select("birth_place_country", priority_countries: ["US"]) %>
  </div>

  <div class="field" id="birth_place_state">
    <%= f.label (t 'birth_place_state') %><br>
    <%= f.select :birth_place_state, User::STATE_TYPES, prompt: (t 'select_state') %>
  </div>

  <div class="field" id="birth_place_city">
    <%= f.label (t 'birth_place_city') %><br>
    <%= f.text_field :birth_place_city %>
  </div>

  <div class="field">
    <%= f.label (t 'password_') %><br>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> <%= (t 'characters_minimum') %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label (t 'password_confirmation') %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <br>

  <div class="actions">
    <%= f.submit (t 'sign_up') %>
  </div>
  
<% end %>
<br><br>

<%= render "devise/shared/links" %>
